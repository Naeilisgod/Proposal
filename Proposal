    <h1>Vezme≈° si mƒõ?</h1>
    <p class="lead"></p>

    <div class="btns" role="group" aria-label="Odpovƒõdi">
      <button class="yes" id="yesBtn">ANO üíç</button>
      <button class="no" id="noBtn">NE</button>
    </div>

      <canvas id="confetti"></canvas>
  </div>

  <script>
    // Jednoduch√© konfety bez knihoven
    const yes = document.getElementById('yesBtn');
    const no = document.getElementById('noBtn');
    const canvas = document.getElementById('confetti');
    const ctx = canvas.getContext('2d');
    let particles = [];

    function resize(){
      canvas.width = canvas.clientWidth = canvas.offsetWidth;
      canvas.height = canvas.clientHeight = canvas.offsetHeight;
    }
    window.addEventListener('resize', resize);
    resize();

    function rand(min,max){return Math.random()*(max-min)+min}

    function spawnConfetti(x,y){
      for(let i=0;i<120;i++){
        particles.push({x: x || canvas.width/2, y: y || canvas.height/3, vx: rand(-6,6), vy: rand(-10,2), r: rand(4,8), c: ['#f59e0b','#ffd27f','#ffffff','#ff7ab6'][Math.floor(rand(0,4))], life: rand(60,140)})
      }
      canvas.style.display='block';
      requestAnimationFrame(loop);
    }

    function loop(){
      ctx.clearRect(0,0,canvas.width,canvas.height);
      for(let i=particles.length-1;i>=0;i--){
        const p = particles[i];
        p.vy += 0.2; p.x += p.vx; p.y += p.vy; p.life--;
        ctx.fillStyle = p.c; ctx.beginPath(); ctx.ellipse(p.x,p.y,p.r, p.r*0.7, 0,0,Math.PI*2); ctx.fill();
        if(p.life<=0 || p.y>canvas.height+50) particles.splice(i,1);
      }
      if(particles.length>0) requestAnimationFrame(loop); else canvas.style.display='none';
    }

    yes.addEventListener('click', ()=>{
      // replace card content with celebration message
      const card = document.querySelector('.card');
      card.querySelector('h1').textContent = '≈òekla jsi ANO!';
      card.querySelector('.lead').textContent = 'Jsem nej≈°≈•astnƒõj≈°√≠ ƒçlovƒõk na svƒõtƒõ. Miluju tƒõ ‚ù§Ô∏è';
      card.querySelector('.btns').innerHTML = '<button class="yes" onclick="location.reload()">Znovu</button>';
      spawnConfetti();
    });

    no.addEventListener('click', ()=>{
      const lead = document.querySelector('.lead');
      lead.textContent = 'Dob≈ôe ‚Äî jdu se zab√≠t. ‚ù§Ô∏è';
    });
  </script>
